<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical" >

  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <TextView
      android:text="ID"
      android:textSize="25sp"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content" />

    <EditText
      android:id="@+id/id"
      android:text="7FF"
      android:textSize="25sp"
      android:layout_height="wrap_content"
      android:layout_width="60dp"
      android:layout_marginLeft="20dp"/>

    <TextView
      android:text="DLC"
      android:textSize="25sp"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_marginLeft="40dp"/>

    <EditText
      android:id="@+id/dlc"
      android:text="3"
      android:textSize="25sp"
      android:layout_height="wrap_content"
      android:layout_width="100dp"
      android:layout_marginLeft="20dp"/>
  </LinearLayout>

  <TextView
    android:text="Данные (Байты)"
    android:textSize="25sp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <TextView
      android:text="1:"
      android:textSize="25sp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

    <EditText
      android:id="@+id/byte1"
      android:text="AA"
      android:textSize="25sp"
      android:layout_width="50dp"
      android:layout_height="wrap_content"/>

    <TextView
      android:text="2:"
      android:textSize="25sp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

    <EditText
      android:id="@+id/byte2"
      android:text="1"
      android:textSize="25sp"
      android:layout_width="50dp"
      android:layout_height="wrap_content"/>

    <TextView
      android:text="3:"
      android:textSize="25sp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

    <EditText
      android:id="@+id/byte3"
      android:text="32"
      android:textSize="25sp"
      android:layout_width="50dp"
      android:layout_height="wrap_content"/>

    <TextView
      android:text="4:"
      android:textSize="25sp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

    <EditText
      android:id="@+id/byte4"
      android:text="AA"
      android:textSize="25sp"
      android:layout_width="50dp"
      android:layout_height="wrap_content"/>

  </LinearLayout>

  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <TextView
      android:text="5:"
      android:textSize="25sp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

    <EditText
      android:id="@+id/byte5"
      android:text="AA"
      android:textSize="25sp"
      android:layout_width="50dp"
      android:layout_height="wrap_content"/>

    <TextView
      android:text="6:"
      android:textSize="25sp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

    <EditText
      android:id="@+id/byte6"
      android:text="AA"
      android:textSize="25sp"
      android:layout_width="50dp"
      android:layout_height="wrap_content"/>

    <TextView
      android:text="7:"
      android:textSize="25sp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

    <EditText
      android:id="@+id/byte7"
      android:text="AA"
      android:textSize="25sp"
      android:layout_width="50dp"
      android:layout_height="wrap_content"/>

    <TextView
      android:text="8:"
      android:textSize="25sp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

    <EditText
      android:id="@+id/byte8"
      android:text="AA"
      android:textSize="25sp"
      android:layout_width="50dp"
      android:layout_height="wrap_content"/>

  </LinearLayout>

  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:orientation="horizontal" >

    <Button
      android:text="Назад"
      android:layout_width="190dp"
      android:layout_height="wrap_content"
      android:onClick="goBack"/>

    <Button
      android:text="Отправить"
      android:layout_width="190dp"
      android:layout_height="wrap_content"
      android:onClick="sendPackage"/>

  </LinearLayout>

  <TextView android:id="@+id/info"
    android:text="Данные (Байты)"
    android:textSize="25sp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

</LinearLayout>